{
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "types/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
